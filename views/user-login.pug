extends layout
include utils.pug

block content
  +validationErrorSummary(errors)
  div(class='forms')
    h4(class='formHeader') Log In
    form(action='/users/login' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      +field('Email Address', 'email', email, 'email', 'Email Address')
      +field('Password', 'password', null, 'password', 'Password')
      div
        button(type='submit' class='button') Login
    div
      p: a(href='/users/register') Don't have an account?
