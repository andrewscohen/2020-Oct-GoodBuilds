extends layout.pug
include utils.pug

block content
  div(class='background-img')
  div(class='register-container')
    div(class='register_box')
      div(class='register_header') Sign up
      form(action='/users/register' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('text', 'userName', user.userName, '', 'User Name')
        +field('text', 'firstName', user.firstName, '', 'First Name')
        +field('text', 'lastName', user.lastName, '', 'Last Name')
        +field('email', 'email', user.email,'', 'Email')
        +field('password', 'password', user.password, 'password', 'Password')
        +field('password', 'confirmPassword', '','password', 'Confirm Password')
        div(class='py-4')
          button(type='submit' class='button') Sign Up
          +validationErrorSummary(errors)
      div(class='account-btn')
        a(href='/users/login') Already have an account?
